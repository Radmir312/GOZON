<Window x:Class="GOZON.Views.Main.Windows.AddDeliveryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Добавить поставку" 
        Height="429" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="10,5,5,5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Товар -->
        <TextBlock Grid.Row="0" Text="Товар:*"/>
        <ComboBox Grid.Row="1" 
                  x:Name="ProductComboBox"
                  DisplayMemberPath="Name"
                  SelectedValuePath="Id"
                  SelectionChanged="ProductComboBox_SelectionChanged"/>

        <!-- Текущий остаток -->
        <TextBlock Grid.Row="2" Text="Текущий остаток:"/>
        <TextBlock Grid.Row="3" 
                   x:Name="CurrentStockTextBlock" 
                   Text="0"
                   Margin="5"
                   FontWeight="Bold"/>

        <!-- Поставщик -->
        <TextBlock Grid.Row="4" Text="Поставщик:*"/>
        <ComboBox Grid.Row="5" 
                  x:Name="SupplierComboBox"
                  DisplayMemberPath="Name"
                  SelectedValuePath="Id"/>

        <!-- Склад -->
        <TextBlock Grid.Row="6" Text="Склад:*"/>
        <ComboBox Grid.Row="7" 
                  x:Name="WarehouseComboBox"
                  DisplayMemberPath="Name"
                  SelectedValuePath="Id" Margin="5,5,5,68"/>

        <!-- Количество -->
        <TextBlock Grid.Row="7" Text="Количество:*" Margin="5,72,10,0" VerticalAlignment="Top"/>
        <TextBox Grid.Row="7" 
                 x:Name="QuantityTextBox"
                 Text="1"
                 PreviewTextInput="QuantityTextBox_PreviewTextInput" Margin="5,93,5,4"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="10" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,10,0,0">
            <Button x:Name="SaveButton" 
                    Content="Сохранить" 
                    Click="SaveButton_Click" 
                    IsDefault="True"/>
            <Button Content="Отмена" 
                    Click="CancelButton_Click" 
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>