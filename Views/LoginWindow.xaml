<Window x:Class="GOZON.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GOZON"
        mc:Ignorable="d"
        Title="LoginWindow" Height="435" Width="500"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="190"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Content="Логин" 
               Grid.Row="2"
               Grid.Column="0"
               HorizontalAlignment="Right"
               FontSize="20"
               />

        <TextBox x:Name="LoginTextBox"
                 Grid.Row="2"
                 Grid.Column="1"
                 Background="#FFE6E0E0"
                 HorizontalAlignment="Left"
                 Margin="0,10,0,0"
                 Width="200" 
                 FontSize="18" 
                 TextChanged="LoginTextBox_TextChanged"
                 />

        <Label Content="Пaроль" 
                   Grid.Row="3"                   
                   Grid.Column="0"
                   HorizontalAlignment="Right"
                   FontSize="20"
                   />

        <PasswordBox x:Name="PasswordBox"
                   Grid.Row="3"
                   Grid.Column="1"
                   Background="#FFE6E0E0"
                   HorizontalAlignment="Left"
                   Margin="0,10,0,0"
                   Width="200" 
                   FontSize="18" 
                   />

        <Button x:Name="LoginButton" 
            Grid.Row="4"
            Grid.Column="1" 
            Width="80"
            Height="30"
            Content="Login" 
            HorizontalAlignment="Left" 
            FontSize="18"
            FontFamily="Candara"
            Margin="0,10,0,0"
            Click="LoginButton_Click"/>

        <Image Grid.Row="5"
       Grid.ColumnSpan="2"
       Source="/Resources/car.jpg"
       Stretch="Uniform"
       Height="120"
       Margin="0,15,0,-10"
       HorizontalAlignment="Center"/>



        <TextBlock Grid.Row="6"
           Grid.ColumnSpan="2"
           HorizontalAlignment="Center"
           VerticalAlignment="Top"
           Margin="0,15,0,0">
    <Hyperlink Click="RegisterLink_Click"
               Foreground="Blue"
               TextDecorations="None">
        Нет аккаунта? Зарегистрируйтесь
    </Hyperlink>
        </TextBlock>
        <TextBlock Text="Авторизация"
                   Grid.ColumnSpan="2"
                   FontSize="35"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   />

    </Grid>
</Window>
