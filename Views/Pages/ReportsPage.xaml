<Page x:Class="GOZON.Views.Main.Windows.ReportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Отчёты"
      Loaded="Page_Loaded"
      Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button
            Grid.Row="0"
            Content="Обновить"
            Click="Refresh_Click"
            HorizontalAlignment="Left"
            Height="Auto"
            Width="120" 
            Margin="10,10,5,0"
         />

        <!-- Таблица отчёта -->
        <DataGrid x:Name="ReportsGrid" Grid.Row="1" Margin="10"
                  AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/> 
                <DataGridTextColumn Header="Товар" Binding="{Binding ProductName}" Width="150"/> 
                <DataGridTextColumn Header="Откуда" Binding="{Binding FromWarehouse}" Width="100"/> 
                <DataGridTextColumn Header="Куда" Binding="{Binding ToWarehouse}" Width="100"/> 
                <DataGridTextColumn Header="Поставщик" Binding="{Binding SupplierName}" Width="120"/> 
                <DataGridTextColumn Header="Кол-во" Binding="{Binding Quantity}" Width="80"/>  
                <DataGridTextColumn Header="Тип перемещения" Binding="{Binding MovementType}" Width="80"/>  
                <DataGridTextColumn Header="Пользователь" Binding="{Binding UserName}" Width="120"/>  
                <DataGridTextColumn Header="Тип" Binding="{Binding TypeDisplay}" Width="80"/> 
                <DataGridTextColumn Header="Дата" 
                    Binding="{Binding CreatedAt, StringFormat=dd.MM.yyyy HH:mm}" 
                    Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>