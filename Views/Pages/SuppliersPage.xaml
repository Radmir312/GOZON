<Page x:Class="GOZON.Views.Main.Windows.SuppliersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Поставщики"
      Loaded="Page_Loaded"
      Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Content="Добавить поставщика"
                    Click="AddSupplier_Click"
                    Width="160"
                    Margin="0,0,5,0"/>
            <Button x:Name="EditButton"
                    Content="Редактировать"
                    Click="EditSupplier_Click"
                    Width="100"
                    Margin="0,0,5,0"/>
            <Button Content="Обновить"
                    Click="Refresh_Click"
                    Width="80"
                    Margin="0,0,5,0"/>
            <Button x:Name="DeleteButton"
                    Content="Удалить"
                    Click="DeleteSupplier_Click"
                    Width="80"/>
        </StackPanel>

        <DataGrid x:Name="SuppliersGrid"
                  Grid.Row="1"
                  Margin="10"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionChanged="SuppliersGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="150"/>
                <DataGridTextColumn Header="Контакт" Binding="{Binding ContactPerson}" Width="150"/>
                <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="120"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="180"/>
                <DataGridTextColumn Header="Адрес" Binding="{Binding Address}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>