<Page x:Class="GOZON.Views.Main.Windows.HistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="История"
      Loaded="Page_Loaded"
      Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Фильтры и кнопки -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Дата с:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <DatePicker x:Name="DateFromPicker" Width="120" Margin="0,0,10,0"/>
            <TextBlock Text="по:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <DatePicker x:Name="DateToPicker" Width="120" Margin="0,0,10,0"/>
            <TextBlock Text="Тип:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="EntityTypeFilter" Width="120" Margin="0,0,10,0"/>
            <Button Content="Применить" Click="ApplyFilters_Click" Width="80" Margin="0,0,5,0"/>
            <Button Content="Очистить" Click="ClearFilters_Click" Width="80" Margin="0,0,5,0"/>
            <Button Content="Обновить" Click="Refresh_Click" Width="80"/>
        </StackPanel>

        <!-- Таблица истории -->
        <DataGrid x:Name="HistoryGrid" Grid.Row="1" Margin="10"
                  AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Действие" Binding="{Binding Action}" Width="150"/>
                <DataGridTextColumn Header="Пользователь" Binding="{Binding User}" Width="120"/>
                <DataGridTextColumn Header="Дата и время" 
                                   Binding="{Binding Timestamp, StringFormat=dd.MM.yyyy HH:mm:ss}" 
                                   Width="140"/>
                <DataGridTextColumn Header="Детали" Binding="{Binding Details}" Width="200"/>
                <DataGridTextColumn Header="Тип объекта" Binding="{Binding EntityType}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>