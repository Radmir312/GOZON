<Page x:Class="GOZON.Views.Main.Windows.DeliveriesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Поставки"
      Loaded="Page_Loaded"
      Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Content="Добавить поставку" 
                    Click="AddDelivery_Click" 
                    Width="120" 
                    Margin="0,0,5,0"/>

            <Button Content="Удалить поставку" 
                    Click="DeleteDelivery_Click" 
                    Width="120" 
                    Margin="0,0,5,0"/>

            <Button Content="Обновить" 
                    Click="Refresh_Click" 
                    Width="80"
                    Margin="0,0,5,0"/>
        </StackPanel>

        <DataGrid x:Name="DeliveriesGrid"
                  Grid.Row="1"
                  Margin="10"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="50" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Товар" Width="150" Binding="{Binding ProductName}"/>
                <DataGridTextColumn Header="Поставщик" Width="150" Binding="{Binding SupplierName}"/>
                <DataGridTextColumn Header="Склад" Width="120" Binding="{Binding WarehouseName}"/>
                <DataGridTextColumn Header="Кол-во" Width="80" Binding="{Binding Quantity}"/>
                <DataGridTextColumn Header="Дата" Width="140" Binding="{Binding Date}"/>
            </DataGrid.Columns>

        </DataGrid>
    </Grid>
</Page>