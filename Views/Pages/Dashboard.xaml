<Window x:Class="GOZON.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Главная страница" 
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="221*"/>
            <ColumnDefinition Width="579*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель (меню) -->
        <Border Grid.Column="0" Background="#2F4F4F">
            <DockPanel>
                <!-- В Dashboard.xaml в секции с пользователем: -->
                <Border DockPanel.Dock="Bottom" Height="80" Background="#1E2832">
                    <StackPanel VerticalAlignment="Center" Margin="10">
                        <TextBlock x:Name="UserFullNameLabel"
                   Foreground="White"
                   FontSize="12"
                   FontWeight="Bold"/>
                        <TextBlock x:Name="UserLoginLabel"
                   Foreground="LightGray"
                   FontSize="10"
                   Margin="0,5,0,0"/>
                        <Button x:Name="LogoutButton"
                Content="Выход"
                Height="25"
                Width="80"
                Margin="0,10,0,0"
                Background="Transparent"
                Foreground="White"
                BorderBrush="LightGray"
                BorderThickness="1"
                Click="LogoutButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- Меню -->
                <StackPanel Margin="10,20,10,0">
                    <Button Content="Товары" 
                            Height="35" Margin="0,0,0,5"
                            HorizontalContentAlignment="Left"
                            Padding="10,0,0,0"
                            Background="Transparent"
                            Foreground="White"
                            FontFamily="Arial"
                            FontSize="12"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="MenuButton_Click"/>

                    <Button Content="Поставки" 
                            Height="35" Margin="0,0,0,5"
                            HorizontalContentAlignment="Left"
                            Padding="10,0,0,0"
                            Background="Transparent"
                            Foreground="White"
                            FontFamily="Arial"
                            FontSize="12"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="MenuButton_Click"/>

                    <Button Content="Поставщики" 
                            Height="35" Margin="0,0,0,5"
                            HorizontalContentAlignment="Left"
                            Padding="10,0,0,0"
                            Background="Transparent"
                            Foreground="White"
                            FontFamily="Arial"
                            FontSize="12"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="MenuButton_Click"/>

                    <Button Content="Склады" 
                            Height="35" Margin="0,0,0,5"
                            HorizontalContentAlignment="Left"
                            Padding="10,0,0,0"
                            Background="Transparent"
                            Foreground="White"
                            FontFamily="Arial"
                            FontSize="12"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="MenuButton_Click"/>

                    <Button Content="Движения" 
                            Height="35" Margin="0,0,0,5"
                            HorizontalContentAlignment="Left"
                            Padding="10,0,0,0"
                            Background="Transparent"
                            Foreground="White"
                            FontFamily="Arial"
                            FontSize="12"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="MenuButton_Click"/>

                    <Button Content="Отчёты" 
                            Height="35" Margin="0,0,0,5"
                            HorizontalContentAlignment="Left"
                            Padding="10,0,0,0"
                            Background="Transparent"
                            Foreground="White"
                            FontFamily="Arial"
                            FontSize="12"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="MenuButton_Click"/>

                    <Button Content="История" 
                            Height="35" Margin="0,0,0,5"
                            HorizontalContentAlignment="Left"
                            Padding="10,0,0,0"
                            Background="Transparent"
                            Foreground="White"
                            FontFamily="Arial"
                            FontSize="12"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="MenuButton_Click"/>

                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Правая область (контент) -->
        <Grid Grid.Column="1" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Верхняя панель -->
            <Border Grid.Row="0" Background="#4682B4">
                <Label Content="Управление складом" 
                       FontFamily="Arial" 
                       FontSize="16" 
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"
                       Margin="20,0,0,0"/>
            </Border>
            <Frame Grid.Row="1" Name="MainFrame" NavigationUIVisibility="Hidden"></Frame>
        </Grid>
    </Grid>
</Window>
