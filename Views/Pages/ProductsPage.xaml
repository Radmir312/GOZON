<Page x:Class="GOZON.Views.Pages.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Товары"
      Loaded="Page_Loaded"
      Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Content="Добавить" Click="AddProduct_Click" Width="80" Margin="0,0,5,0"/>
            <Button x:Name="EditButton" Content="Редактировать" Click="EditProduct_Click" Width="100" Margin="0,0,5,0"/>
            <Button Content="Обновить" Click="Refresh_Click" Width="80" Margin="0,0,5,0"/>
            <Button x:Name="DeleteButton" Content="Удалить" Click="DeleteProduct_Click" Width="80"/>
        </StackPanel>

        <DataGrid x:Name="ProductsGrid" Grid.Row="1" Margin="10"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionChanged="ProductsGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Артикул" Binding="{Binding SKU}" Width="120"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding Price, StringFormat={}{0:F2} руб.}" Width="100"/>
                <DataGridTextColumn Header="Кол-во" Binding="{Binding TotalQuantity}" Width="80"/>
                <DataGridTextColumn Header="Мин. кол-во" Binding="{Binding MinQuantity}" Width="80"/>
                <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>