<Window x:Class="GOZON.RegWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GOZON"
        mc:Ignorable="d"
        Title="Регистрация" Height="550" Width="500"
        ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="190"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Регистрация"
                   Grid.ColumnSpan="2"
                   FontSize="35"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>

        <!-- Полное имя -->
        <Label Content="Полное имя" 
               Grid.Row="2"
               Grid.Column="0"
               HorizontalAlignment="Right"
               FontSize="20"/>

        <TextBox x:Name="FullNameTextBox"
                 Grid.Row="2"
                 Grid.Column="1"
                 Background="#FFE6E0E0"
                 HorizontalAlignment="Left"
                 Margin="0,10,0,0"
                 Width="200" 
                 FontSize="18"/>

        <!-- Email -->
        <Label Content="Email" 
               Grid.Row="3"
               Grid.Column="0"
               HorizontalAlignment="Right"
               FontSize="20"/>

        <TextBox x:Name="EmailTextBox"
                 Grid.Row="3"
                 Grid.Column="1"
                 Background="#FFE6E0E0"
                 HorizontalAlignment="Left"
                 Margin="0,10,0,0"
                 Width="200" 
                 FontSize="18"/>

        <!-- Логин -->
        <Label Content="Логин" 
               Grid.Row="4"
               Grid.Column="0"
               HorizontalAlignment="Right"
               FontSize="20"/>

        <TextBox x:Name="LoginTextBox"
                 Grid.Row="4"
                 Grid.Column="1"
                 Background="#FFE6E0E0"
                 HorizontalAlignment="Left"
                 Margin="0,10,0,0"
                 Width="200" 
                 FontSize="18"/>

        <!-- Пароль -->
        <Label Content="Пароль" 
               Grid.Row="5"
               Grid.Column="0"
               HorizontalAlignment="Right"
               FontSize="20"/>

        <PasswordBox x:Name="PasswordBox"
                     Grid.Row="5"
                     Grid.Column="1"
                     Background="#FFE6E0E0"
                     HorizontalAlignment="Left"
                     Margin="0,10,0,0"
                     Width="200" 
                     FontSize="18"/>

        <!-- Подтверждение пароля -->
        <Label Content="Подтверждение пароля" 
               Grid.Row="6"
               Grid.Column="0"
               HorizontalAlignment="Right"
               FontSize="16"
               VerticalAlignment="Center"/>

        <PasswordBox x:Name="ConfirmPasswordBox"
                     Grid.Row="6"
                     Grid.Column="1"
                     Background="#FFE6E0E0"
                     HorizontalAlignment="Left"
                     Margin="0,10,0,0"
                     Width="200" 
                     FontSize="18"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="8"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <Button x:Name="RegisterButton" 
                    Width="100"
                    Height="30"
                    Content="Регистрация" 
                    FontSize="16" 
                    FontFamily="Candara"
                    Margin="0,0,20,0"
                    Click="RegisterButton_Click"/>

            <Button x:Name="CancelButton" 
                    Width="100"
                    Height="30"
                    Content="Отмена" 
                    FontSize="16" 
                    FontFamily="Candara"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>