<Page x:Class="GOZON.MainView.MovementsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Движения товаров"
      Loaded="Page_Loaded"
      Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Кнопки действий -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Content="Приход на склад" Click="CreateIncoming_Click" Width="120" Margin="0,0,5,0"/>
            <Button Content="Отгрузка со склада" Click="CreateOutgoing_Click" Width="140" Margin="0,0,5,0"/>
            <Button Content="Перемещение между складами" Click="CreateTransfer_Click" Width="180" Margin="0,0,25,0"/>
            <Button Content="Применить" Click="ApplyFilters_Click" Width="80" Margin="0,0,5,0"/>
            <Button Content="Сбросить" Click="ResetFilters_Click" Width="80" Margin="0,0,5,0"/>
            <Button Content="Обновить" Click="Refresh_Click" Width="80" Margin="0,0,5,0"/>
        </StackPanel>

        <!-- Фильтры -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10,5,10,10">
            <TextBlock Text="Тип движения:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="TypeFilter" Width="120" Margin="0,0,10,0"/>
            <TextBlock Text="Склад:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="WarehouseFilter" Width="120" Margin="0,0,10,0"/>
            <TextBlock Text="Дата с:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <DatePicker x:Name="DateFromPicker" Width="120" Margin="0,0,10,0"/>
            <TextBlock Text="по:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <DatePicker x:Name="DateToPicker" Width="120" Margin="0,0,10,0"/>
        </StackPanel>

        <!-- Таблица движений -->
        <DataGrid x:Name="MovementsGrid" Grid.Row="2" Margin="10"
                  AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Товар" Binding="{Binding ProductName}" Width="150"/>
                <DataGridTextColumn Header="Откуда" Binding="{Binding FromWarehouse}" Width="100"/>
                <DataGridTextColumn Header="Куда" Binding="{Binding ToWarehouse}" Width="100"/>
                <DataGridTextColumn Header="Тип" Binding="{Binding TypeDisplay}" Width="80"/>
                <DataGridTextColumn Header="Кол-во" Binding="{Binding Quantity}" Width="80"/>
                <DataGridTextColumn Header="Поставщик" Binding="{Binding SupplierName}" Width="120"/>
                <DataGridTextColumn Header="Пользователь" Binding="{Binding UserName}" Width="120"/>
                <DataGridTextColumn Header="Дата" 
                                   Binding="{Binding CreatedAt, StringFormat=dd.MM.yyyy HH:mm}" 
                                   Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>