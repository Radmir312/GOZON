<Page x:Class="GOZON.MainView.WarehousesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Склады"
      Loaded="Page_Loaded"
      Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Кнопки Добавить и Обновить -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Content="Добавить склад" Click="AddWarehouse_Click" Width="120" Margin="0,0,5,0"/>
            <Button Content="Обновить" Click="Refresh_Click" Width="80"/>
        </StackPanel>

        <!-- Таблица складов -->
        <DataGrid x:Name="WarehousesGrid" Grid.Row="1" Margin="10"
                  AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="150"/>
                <DataGridTextColumn Header="Локация" Binding="{Binding Location}" Width="150"/>
                <DataGridTextColumn Header="Общее кол-во" Binding="{Binding TotalStock}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
