<Page x:Class="GOZON.MainView.ReportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Отчёты"
      Loaded="Page_Loaded"
      Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Кнопки отчётов -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Content="Остатки товаров" Click="Refresh_Click" Width="120" Margin="0,0,5,0"/>
            <Button Content="Движения за 30 дней" Click="GenerateMovementsReport_Click" Width="150" Margin="0,0,5,0"/>
            <Button Content="Низкие остатки" Click="GenerateLowStockReport_Click" Width="120" Margin="0,0,5,0"/>
        </StackPanel>

        <!-- Таблица отчёта -->
        <DataGrid x:Name="ReportsGrid" Grid.Row="1" Margin="10"
                  AutoGenerateColumns="True" IsReadOnly="True"/>
    </Grid>
</Page>