<Page x:Class="GOZON.MainView.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Настройки"
      Loaded="Page_Loaded"
      Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Кнопки -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Content="Сохранить все" Click="SaveAll_Click" Width="120" Margin="0,0,5,0"/>
            <Button Content="Сбросить" Click="Reset_Click" Width="80" Margin="0,0,5,0"/>
            <Button Content="Обновить" Click="Refresh_Click" Width="80"/>
        </StackPanel>

        <!-- Таблица настроек -->
        <DataGrid x:Name="SettingsGrid" Grid.Row="1" Margin="10"
                  AutoGenerateColumns="False" CanUserAddRows="False"
                  BeginningEdit="SettingsGrid_BeginningEdit"
                  CellEditEnding="SettingsGrid_CellEditEnding">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" IsReadOnly="True"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="120" IsReadOnly="True"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="200" IsReadOnly="True"/>
                <DataGridTextColumn Header="Значение" Binding="{Binding Value}" Width="200"/>
                <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="300" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>